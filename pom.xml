  <modelVersion>4.0.0</modelVersion>
  <groupId>eu</groupId>
  <artifactId>sqooss</artifactId>
  <version>0.9</version>

  <name>eu.sqooss (OSGi project)</name>

  <!--
   | describe your project here
  -->

  <description>Generated using Pax-Construct</description>
  <repositories>
  </repositories>

  <properties>
    <org.osgi.service.http.port>8080</org.osgi.service.http.port>
    <org.osgi.service.http.port.secure>8443</org.osgi.service.http.port.secure>
    <eu.sqooss.db.url>jdbc:mysql://localhost/alitheia?useUnicode=true&amp;connectionCollation=utf8_general_ci&amp;characterSetResults=utf8</eu.sqooss.db.url>
	<eu.sqooss.db.driver>com.mysql.jdbc.Driver</eu.sqooss.db.driver>
	<eu.sqooss.db.dialect>org.hibernate.dialect.MySQLInnoDBDialect</eu.sqooss.db.dialect>
	<eu.sqooss.db.user>alitheia</eu.sqooss.db.user>
	<eu.sqooss.db.passwd>alitheia</eu.sqooss.db.passwd>
  </properties>

  <packaging>pom</packaging>

  <modules>
    <module>poms</module>
    <module>provision</module>
	<module>external</module>
    <module>alitheia</module>
  </modules>
  <developers>
  	<developer>
  		<id>gousiosg</id>
  		<name>Georgios Gousios</name>
  		<email>gousiosg@gmail.com</email>
  		<url>http://istlab.dmst.aueb.gr/~george</url>
  	</developer>
  </developers>

  <build>
    <plugins>
      <plugin>
        <groupId>org.ops4j</groupId>
        <artifactId>maven-pax-plugin</artifactId>
        <version>1.4</version>
        <configuration>
          <!--
           | some example Pax-Runner settings
          -->
          <provision>
              <param>--platform=equinox</param>
              <param>--ee=JavaSE-1.6</param>
          </provision>
        </configuration>
        <executions>
          <!--
           | uncomment to auto-generate IDE files
          <execution>
            <id>ide-support</id>
            <goals>
              <goal>eclipse</goal>
            </goals>
          </execution>
          -->
        </executions>
      </plugin>
      <plugin>
        <groupId>org.apache.maven.plugins</groupId>
        <artifactId>maven-compiler-plugin</artifactId> 
        <configuration>
          <showWarnings>true</showWarnings>
          <showDeprecation>true</showDeprecation>
          <!--<compilerArgument>-Xlint</compilerArgument>-->
          <source>1.5</source>
          <target>1.5</target>
        </configuration>
      </plugin>
    </plugins>
  </build>

</project>
