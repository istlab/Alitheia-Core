<?xml version="1.0"?>
<!DOCTYPE hibernate-mapping PUBLIC
        "-//Hibernate/Hibernate Mapping DTD 3.0//EN"
        "http://hibernate.sourceforge.net/hibernate-mapping-3.0.dtd">

<hibernate-mapping>
  <class name="eu.sqooss.service.db.BugReportMessage" table="BUG_REPORT_MESSAGE">
    <id name="id" column="BUG_REPORT_MESSAGE_ID">
      <generator class="native" />
    </id>
    <many-to-one name="bug" column="BUG_ID" not-null="true" cascade="merge"/>
    <many-to-one name="reporter" column="DEVELOPER_ID" not-null="true" cascade="merge"/>
    <property name="timestamp"  />
    <property name="text" type="text"/>
  </class>
</hibernate-mapping>
