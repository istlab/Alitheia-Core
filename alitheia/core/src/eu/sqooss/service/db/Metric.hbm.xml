<?xml version="1.0"?>
<!DOCTYPE hibernate-mapping PUBLIC
        "-//Hibernate/Hibernate Mapping DTD 3.0//EN"
        "http://hibernate.sourceforge.net/hibernate-mapping-3.0.dtd">

<hibernate-mapping>
  <class name="eu.sqooss.service.db.Metric" table="METRIC">
    <id name="id" column="METRIC_ID">
      <generator class="native" />
    </id>
    <many-to-one name="plugin" column="PLUGIN_ID" not-null="true" lazy="false" />
    <many-to-one name="metricType" column="METRIC_TYPE" lazy="false" fetch="join" />
    <property name="description" column="DESCRIPTION" not-null="true" />
    <property name="mnemonic" column="MNEMONIC" not-null="true" length="10" unique="true" />
    <set name="evaluationMarks" inverse="true" cascade="all-delete-orphan">
        <key column="METRIC_ID"/>
        <one-to-many class="eu.sqooss.service.db.EvaluationMark"/>
    </set>
    <set name="projectMeasurements" inverse="true" cascade="all-delete-orphan">
        <key column="METRIC_ID"/>
        <one-to-many class="eu.sqooss.service.db.StoredProjectMeasurement"/>
    </set>
    <set name="versionMeasurements" inverse="true" cascade="all-delete-orphan">
        <key column="METRIC_ID"/>
        <one-to-many class="eu.sqooss.service.db.ProjectVersionMeasurement"/>
    </set>
    <set name="fileMeasurements" inverse="true" cascade="all-delete-orphan">
        <key column="METRIC_ID"/>
        <one-to-many class="eu.sqooss.service.db.ProjectFileMeasurement"/>
    </set>
    <set name="fileGroupMeasurements" inverse="true" cascade="all-delete-orphan">
        <key column="METRIC_ID"/>
        <one-to-many class="eu.sqooss.service.db.FileGroupMeasurement"/>
    </set>
  </class>
</hibernate-mapping>
