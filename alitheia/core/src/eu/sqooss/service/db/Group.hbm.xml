<?xml version="1.0"?>
<!DOCTYPE hibernate-mapping PUBLIC
        "-//Hibernate/Hibernate Mapping DTD 3.0//EN"
        "http://hibernate.sourceforge.net/hibernate-mapping-3.0.dtd">

<hibernate-mapping>
  <class name="eu.sqooss.service.db.Group" table="GROUPS">
    <id name="id" column="GROUP_ID">
      <generator class="native" />
    </id>
    <property name="description" column="DESCRIPTION" />

    <set name="users" table="GROUP_USER" inverse="true">
      <key column="GROUP_ID"/>
      <one-to-many class="eu.sqooss.service.db.GroupUser"/>
    </set>
  </class>  
</hibernate-mapping>

