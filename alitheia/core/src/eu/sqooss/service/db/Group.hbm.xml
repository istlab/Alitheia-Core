<?xml version="1.0"?>
<!DOCTYPE hibernate-mapping PUBLIC
        "-//Hibernate/Hibernate Mapping DTD 3.0//EN"
        "http://hibernate.sourceforge.net/hibernate-mapping-3.0.dtd">

<hibernate-mapping>
  <class name="eu.sqooss.service.db.Group" table="GROUPS">
    <id name="id" column="GROUP_ID">
      <generator class="native" />
    </id>
    <property name="description" column="DESCRIPTION" unique="true" />

    <set name="users" table="GROUP_USER">
      <key column="GROUP_ID"/>
      <many-to-many class="eu.sqooss.service.db.User" column="USER_ID"/>
    </set>
    <set name="groupPrivileges" table="GROUP_PRIVILEGE" inverse="true">
      <key column="GROUP_ID"/>
      <one-to-many class="eu.sqooss.service.db.GroupPrivilege"/>
    </set>
    <many-to-one name="groupType" column="GROUP_TYPE" />
  </class>  
</hibernate-mapping>

