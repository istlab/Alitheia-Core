<?xml version="1.0"?>
<!DOCTYPE hibernate-mapping PUBLIC
        "-//Hibernate/Hibernate Mapping DTD 3.0//EN"
        "http://hibernate.sourceforge.net/hibernate-mapping-3.0.dtd">

<hibernate-mapping>
  <class name="eu.sqooss.service.db.Bug" table="BUG">
    <id name="id" column="BUG_ID">
      <generator class="native" />
    </id>
    <many-to-one name="commit" column="COMMIT_ID" cascade="merge" />
    <property name="bugFileLoc" column="BUG_FILE_LOC" />
    <property name="severity" column="SEVERITY" />
    <property name="status" column="STATUS" />
    <property name="creationTS" column="CREATION_TS" />
    <property name="deadline" column="DEADLINE" />
    <property name="deltaTS" column="DELTA_TS" />
    <property name="estimatedTime" column="ESTIMATED_TIME" />
    <property name="keywords" column="KEYWORDS" />
    <property name="operatingSystem" column="OPERATING_SYSTEM" />
    <property name="priority" column="PRIORITY" />
    <property name="product" column="PRODUCT" />
    <property name="remainingTime" column="REMAINING_TIME" />
    <property name="reportPlatform" column="REPORT_PLATFORM" />
    <property name="reporter" column="REPORTER" />
    <property name="resolution" column="RESOLUTION" />
    <property name="shortDesc" column="SHORT_DESC" />
    <set name="reportMessages" inverse="true" cascade="all-delete-orphan">
        <key column="BUG_ID"/>
        <one-to-many class="eu.sqooss.service.db.BugReportMessage"/>
    </set>
  </class>
</hibernate-mapping>
